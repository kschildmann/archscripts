#!/usr/bin/bash
set -e

# Check if user is root and abort
if [ "$EUID" -eq 0 ]; then
    echo "Do not run as root"
    exit
fi

# Install git if not installed
sudo pacman -S git base-devel libhandy libadwaita --noconfirm

# Download repo from AUR
git clone https://aur.archlinux.org/libpamac-full.git
git clone https://aur.archlinux.org/pamac-all.git

# Install
cd libpamac-full
makepkg -si --noconfirm
cd ../pamac-all
makepkg -si --noconfirm

# Remove directories
cd ..
rm -rf libpamac-full
rm -rf pamac-all
